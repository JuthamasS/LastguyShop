                    <label class="custom-control-label" for="NearlyOutOfStock">สินค้าใกล้หมด</label>
                </div>
            </div>
            <div class="col-1">
                <button class="btn btn-primary" style="width:200px">ค้นหา</button>
            </div>
        </div>
    </form>
</div>
<div class="row" style="margin-top:80px; margin-bottom:20px">
    <div style="text-align:right">
        <a asp-area="" asp-controller="Home" asp-action="InsertProduct"><button type="button" class="btn btn-success">เพิ่มสินค้า</button></a>
    </div>
</div>
